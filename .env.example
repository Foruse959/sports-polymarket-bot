# Telegram Alerts (Required for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Trading Mode: 'paper' or 'live'
TRADING_MODE=paper

# Paper Trading Settings
STARTING_BALANCE=1000
MAX_POSITION_USD=50
MAX_DAILY_LOSS_USD=100
MAX_OPEN_POSITIONS=10
MAX_HOURLY_TRADES=20
LOSS_STREAK_PAUSE_LIMIT=5

# Risk Management
MAX_SLIPPAGE_PERCENT=2.0
MIN_LIQUIDITY_USD=500
MAX_POSITIONS_PER_EVENT=2

# Sports Market Settings
INCLUDE_UPCOMING_MARKETS=true
UPCOMING_HOURS_AHEAD=24
PRIORITY_SPORTS=cricket,football,nba,nfl,tennis,ufc
FETCH_FUTURES_MARKETS=true

# Strategy Toggles (all enabled by default)
OVERREACTION_FADE_ENABLED=true
DRAW_DECAY_ENABLED=true
RUN_REVERSION_ENABLED=true
WICKET_SHOCK_ENABLED=true
FAVORITE_TRAP_ENABLED=true
VOLATILITY_SCALP_ENABLED=true
LAG_ARBITRAGE_ENABLED=true
LIQUIDITY_PROVISION_ENABLED=true
MARKET_ONLY_ENABLED=true

# NEW: Over/Under and BTTS Strategies
OVER_UNDER_STRATEGY_ENABLED=true
BTTS_STRATEGY_ENABLED=true

# NEW: AI and Always-On Strategies
AI_VALUE_EDGE_ENABLED=true
MOMENTUM_STRATEGY_ENABLED=true
CONTRARIAN_STRATEGY_ENABLED=true

# Sport-Specific Parameters
FOOTBALL_FADE_THRESHOLD=0.05
NBA_RUN_REVERSION_POINTS=10
CRICKET_WICKET_DIP_PERCENT=0.15
TENNIS_SET_FADE_THRESHOLD=0.10

# Exit Parameters (TIGHTER for better win rate)
TAKE_PROFIT_PERCENT=8
STOP_LOSS_PERCENT=5
TRAILING_STOP_ENABLED=true
TRAILING_STOP_PERCENT=3
MAX_HOLD_MINUTES=45

# NEW: Relaxed Thresholds (MORE TRADES!)
MARKET_ONLY_FAVORITE_THRESHOLD=0.75
MARKET_ONLY_UNDERDOG_THRESHOLD=0.25
SPREAD_SCALP_MIN_PERCENT=1.5
MIN_SIGNAL_CONFIDENCE=0.5
CONTRARIAN_MIN_MOVE=0.02
MOMENTUM_MIN_STRENGTH=0.3

# NEW: Emergency Trade Mode
EMERGENCY_TRADE_MODE_ENABLED=true
EMERGENCY_TRADE_HOURS=6
EMERGENCY_THRESHOLD_MULTIPLIER=0.5


# ═══════════════════════════════════════════════════════════════════
# AGGRESSIVE MODE (NEW!)
# ═══════════════════════════════════════════════════════════════════
# Enable aggressive trading mode with compounding and pyramiding
AGGRESSIVE_MODE=false

# Position sizing as % of equity (compounds automatically!)
POSITION_SIZE_PERCENT=10

# Kelly Criterion optimal sizing
USE_KELLY_SIZING=true
KELLY_FRACTION=0.25

# ═══════════════════════════════════════════════════════════════════
# ML WHALE COPY TRADING (NEW!)
# ═══════════════════════════════════════════════════════════════════
# Enable ML-powered whale copy trading
ML_ENABLED=true
ML_MODEL_PATH=models/whale_model.pkl
ML_MIN_CONFIDENCE=0.6
ML_AUTO_RETRAIN_SAMPLES=50

# ═══════════════════════════════════════════════════════════════════
# BLOCKCHAIN MONITORING (NEW!)
# ═══════════════════════════════════════════════════════════════════
# Monitor Polygon blockchain for whale trades (requires web3)
